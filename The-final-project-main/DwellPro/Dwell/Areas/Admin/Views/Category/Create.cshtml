@model DwellMVC.Areas.Admin.Models.CategoryViewModel

@{
    ViewData["Title"] = "افزودن دسته‌بندی";
}

<h2 class="text-center text-purple mb-4">افزودن دسته‌بندی جدید</h2>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success">
                    @TempData["SuccessMessage"]
                </div>
            }

            <form asp-action="Create" method="post" enctype="multipart/form-data">
                <div class="form-group">
                    <label for="Name">نام دسته‌بندی</label>
                    <input type="text" class="form-control" id="Name" name="Name" placeholder="نام دسته‌بندی را وارد کنید" value="@Model.Name" required />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label for="ImageFile">تصویر دسته‌بندی</label>
                    <input type="file" class="form-control-file" id="ImageFile" name="ImageFile" />
                    <span asp-validation-for="ImageFile" class="text-danger"></span>
                </div>

                <div class="form-group text-center">
                    <button type="submit" class="btn btn-purple btn-lg">افزودن دسته‌بندی</button>
                </div>
            </form>

            <div class="text-center mt-4">
                <a href="@Url.Action("Index", "Category")" class="btn btn-secondary btn-lg">بازگشت به لیست دسته‌بندی‌ها</a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

<style>
    .text-purple {
        color: #6a1b9a;
    }

    .btn-purple {
        background-color: #6a1b9a;
        border-color: #6a1b9a;
    }

        .btn-purple:hover {
            background-color: #512a72;
            border-color: #512a72;
        }

    .form-group label {
        font-weight: bold;
    }

    .form-control, .form-control-file {
        border-radius: 5px;
        padding: 10px;
    }

    .container {
        margin-top: 50px;
    }

    .alert-success {
        margin-bottom: 20px;
    }
</style>
