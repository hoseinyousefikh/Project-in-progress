@model List<App.Domain.Core.Home.Entities.Users.Customers>


<h2>لیست مشتریان</h2>
<table class="customer-table">
    <thead>
        <tr>
            <th>نام</th>
            <th>وضعیت</th>
            <th>آدرس</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var customer in Model)
        {
            <tr>
                <td>@customer.User.FirstName @customer.User.LastName</td>
                <td>@(customer.RoleStatus == App.Domain.Core.Home.Enum.UserStatus.Active ? "فعال" : "غیر فعال")</td>
                <td>@customer.User.Address</td>
            </tr>
        }
    </tbody>
</table>

<style>
    body {
        font-family: 'Arial', sans-serif;
        background-color: #f4f7fc;
        color: #333;
        padding: 20px;
    }

    h2 {
        text-align: center;
        color: #8A2BE2;
        margin-bottom: 20px;
    }

    .customer-table {
        width: 80%;
        margin: 0 auto;
        border-collapse: collapse;
        border-radius: 10px;
        box-shadow: 0 2px 12px rgba(0, 0, 0, 0.1);
        background-color: #fff;
    }

        .customer-table thead {
            background-color: #8A2BE2;
            color: #fff;
        }

        .customer-table th, .customer-table td {
            padding: 12px;
            text-align: center;
            border: 1px solid #ddd;
        }

        .customer-table tr:nth-child(even) {
            background-color: #f9f9f9;
        }

        .customer-table tr:hover {
            background-color: #f1f1f1;
        }

        .customer-table td {
            font-size: 14px;
        }

        .customer-table th {
            font-size: 16px;
            font-weight: bold;
        }

        .customer-table td:nth-child(2) {
            font-weight: bold;
        }

            .customer-table td:nth-child(2):contains('فعال') {
                color: #8A2BE2; 
            }

            
            .customer-table td:nth-child(2):contains('غیر فعال') {
                color: #f44336;
            }
</style>
