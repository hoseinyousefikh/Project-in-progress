@model DwellMVC.Areas.Admin.Models.HomeServiceCreateViewModel

@{
    ViewData["Title"] = "ایجاد هوم سرویس";
}

<h2 class="text-center">@ViewData["Title"]</h2>

<div class="form-container">
    <form asp-action="Create" method="post" enctype="multipart/form-data">
        <div class="form-group">
            <label for="Name">نام سرویس</label>
            <input type="text" class="form-control" id="Name" name="Name" value="@Model.Name" required />
        </div>
        <div class="form-group">
            <label for="Description">توضیحات</label>
            <textarea class="form-control" id="Description" name="Description" required>@Model.Description</textarea>
        </div>
        <div class="form-group">
            <label for="BasePrice">قیمت پایه</label>
            <input type="number" class="form-control" id="BasePrice" name="BasePrice" value="@Model.BasePrice" required />
        </div>
        <div class="form-group">
            <label for="SubCategoryId">دسته‌بندی فرعی</label>
            <select class="form-control" id="SubCategoryId" name="SubCategoryId" required>
                <option value="">انتخاب دسته‌بندی فرعی</option>
                @foreach (var subCategory in Model.SubCategories)
                {
                    <option value="@subCategory.Id">@subCategory.Name</option>
                }
            </select>
        </div>
        <div class="form-group">
            <label for="ImageFile">تصویر</label>
            <input type="file" class="form-control" id="ImageFile" name="ImageFile" />
        </div>
        <button type="submit" class="btn btn-primary">ایجاد</button>
    </form>

    <a href="@Url.Action("Index")" class="btn btn-secondary mt-3">بازگشت</a>
</div>

@if (TempData["SuccessMessage"] != null)
{
    <div class="modal fade" id="successModal" tabindex="-1" role="dialog" aria-labelledby="successModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="successModalLabel">عملیات موفقیت‌آمیز</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    @TempData["SuccessMessage"]
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">بستن</button>
                    <a href="@Url.Action("Index")" class="btn btn-primary">بازگشت به لیست</a>
                </div>
            </div>
        </div>
    </div>

    <script>
        $(document).ready(function () {
            $('#successModal').modal('show');
        });
    </script>
}

<style>
    .form-container {
        max-width: 600px;
        margin: 0 auto;
        padding: 30px;
        border: 2px solid #6f42c1; 
        border-radius: 10px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        background-color: #f9f9f9;
    }

    .btn-primary {
        background-color: #6f42c1;
        border-color: #6f42c1;
    }

        .btn-primary:hover {
            background-color: #5a2c99;
            border-color: #5a2c99;
        }

    .btn-secondary {
        background-color: #ccc;
        border-color: #ccc;
    }

        .btn-secondary:hover {
            background-color: #bbb;
            border-color: #bbb;
        }

    .form-control {
        border-radius: 5px;
        border: 1px solid #ccc;
    }

    h2 {
        color: #6f42c1;
    }

    .mt-3 {
        margin-top: 15px;
    }
</style>
