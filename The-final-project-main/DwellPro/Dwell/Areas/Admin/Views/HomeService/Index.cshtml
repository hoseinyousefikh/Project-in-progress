@model DwellMVC.Areas.Admin.Models.HomeServiceIndexViewModel

@{
    ViewData["Title"] = "هوم سرویس";
}

<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">
<style>
    body {
        font-family: Arial, sans-serif;
        direction: ltr;
        text-align: left;
        margin: 20px;
        background-color: #f8f9fa;
    }

    .container {
        max-width: 900px;
        margin: auto;
        text-align: left;
    }

    .top-bar {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 20px;
    }

    .dropdown {
        padding: 10px;
        border-radius: 5px;
    }

    .product-list {
        display: flex;
        flex-wrap: wrap;
    }

    .box {
        width: 100%;
        background: white;
        margin: 10px 0;
        padding: 15px;
        border-radius: 10px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        display: flex;
        align-items: center;
        justify-content: space-between;
        transition: border 0.3s ease;
    }

    body {
        background-color: #e9d6f7;
    }

    .box:hover {
        border: 2px solid #9b4de5;
    }

    .box img {
        width: 90px;
        height: 90px;
        object-fit: cover;
        border-radius: 10px;
        margin-right: 15px;
    }

    .box-content {
        flex: 1;
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    .text-container {
        flex: 1;
        margin-left: 20px;
    }

        .text-container h5 {
            margin: 0 0 5px 0;
            font-size: 18px;
        }

        .text-container p {
            margin: 5px 0;
            color: #666;
            font-size: 14px;
        }

        .text-container strong {
            display: block;
            margin-top: 5px;
            font-size: 16px;
            color: #333;
        }

    .view-count {
        display: flex;
        align-items: center;
        color: #9b4de5;
        font-size: 14px;
        margin-top: 8px;
    }

        .view-count i {
            margin-right: 5px;
        }

    .menu-container {
        position: relative;
        text-align: left;
    }

    .menu-btn {
        background: none;
        border: none;
        font-size: 18px;
        cursor: pointer;
        color: #9b4de5;
    }

    .menu-content {
        display: none;
        position: absolute;
        left: 0;
        background: white;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        border-radius: 5px;
        min-width: 120px;
        z-index: 1000;
        text-align: left;
    }

        .menu-content a {
            display: block;
            padding: 8px 12px;
            text-decoration: none;
            color: black;
        }

            .menu-content a:hover {
                background: #9b4de5;
                color: white;
            }

    .add-service-btn {
        background-color: #D4A0F5;
        color: white;
        padding: 10px 20px;
        border-radius: 5px;
        text-decoration: none;
        font-size: 16px;
        transition: background-color 0.3s;
    }

        .add-service-btn:hover {
            background-color: #9b4de5;
        }

    .pagination {
        text-align: center;
        margin-top: 20px;
    }

    .page-btn {
        padding: 10px;
        margin: 5px;
        border-radius: 5px;
        cursor: pointer;
        background: #9b4de5;
        color: white;
        border: none;
        text-decoration: none;
    }
</style>

<body>
    <div class="container">
        <div class="top-bar">
            <h2>هوم سرویس</h2>
            <form id="filterForm" method="get" action="@Url.Action("Index")">
                <select id="subCategoryDropdown" name="subCategoryId" class="form-control" onchange="this.form.submit()">
                    <option value="0" selected="@(Model.SelectedSubCategoryId == null ? "selected" : null)">همه دسته‌بندی‌ها</option>
                    @foreach (var subCategory in Model.SubCategories)
                    {
                        <option value="@subCategory.Id" selected="@(subCategory.Id == Model.SelectedSubCategoryId ? "selected" : null)">@subCategory.Name</option>
                    }
                </select>

            </form>
            <a href="@Url.Action("Create")" class="add-service-btn">اضافه کردن هوم سرویس جدید</a>
        </div>

        <div class="product-list">
            @if (Model.HomeServices.Any())
            {
                @foreach (var service in Model.HomeServices)
                {
                    <div class="box">
                        <div class="box-content">
                            <img src="@service.ImageUrl" alt="@service.Name">
                            <div class="text-container">
                                <h5>@service.Name</h5>
                                <p>@service.Description</p>
                                <strong>@service.BasePrice تومان</strong>
                                <div class="view-count">
                                    <i class="fas fa-eye"></i> @service.ViewCount
                                </div>
                            </div>
                        </div>
                        <div class="menu-container">
                            <button class="menu-btn"><i class="fas fa-ellipsis-v"></i></button>
                            <div class="menu-content">
                                <a href="@Url.Action("Edit", new { id = service.Id })">ویرایش</a>
                                <a href="@Url.Action("Delete", new { id = service.Id })" onclick="return confirm('آیا مطمئن هستید؟')">حذف</a>
                            </div>
                        </div>
                    </div>
                }
            }
            else
            {
                <p>هیچ سرویس یافت نشد.</p>
            }
        </div>

        <div class="pagination">
            @if (Model.CurrentPage > 1)
            {
                <a href="@Url.Action("Index", new { subCategoryId = Model.SelectedSubCategoryId, page = Model.CurrentPage - 1 })" class="page-btn">قبلی</a>
            }
            @if (Model.CurrentPage < Model.TotalPages)
            {
                <a href="@Url.Action("Index", new { subCategoryId = Model.SelectedSubCategoryId, page = Model.CurrentPage + 1 })" class="page-btn">بعدی</a>
            }
        </div>
    </div>

    <script>
        document.addEventListener("DOMContentLoaded", function () {
            document.getElementById("subCategoryDropdown").addEventListener("change", function () {
                document.getElementById("filterForm").submit();
            });

            document.querySelectorAll(".menu-btn").forEach(button => {
                button.addEventListener("click", function (event) {
                    event.stopPropagation();
                    let menu = this.nextElementSibling;
                    document.querySelectorAll(".menu-content").forEach(m => m.style.display = "none");
                    menu.style.display = menu.style.display === "block" ? "none" : "block";
                });
            });

            document.addEventListener("click", function () {
                document.querySelectorAll(".menu-content").forEach(menu => menu.style.display = "none");
            });
        });
    </script>
</body>
