@model App.Domain.Core.Home.Entities.Categories.SubCategory

@{
    ViewData["Title"] = "جزئیات زیرمجموعه";
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />

<div class="container mt-4">
    <div class="card shadow-lg rounded p-4 border-0" style="background-color: #f3e5f5;">
        <h2 class="text-center text-purple mb-4">جزئیات زیرمجموعه</h2>

        <div class="row">
            <div class="col-md-6">
                <h5><strong>شناسه:</strong> @Model.Id</h5>
                <h5><strong>نام:</strong> @Model.Name</h5>
                <h5><strong>دسته‌بندی:</strong> @Model.Category.Name</h5>
            </div>
            <div class="col-md-6 text-center">
                <img src="@Model.ImageUrl" alt="تصویر" class="img-fluid rounded shadow" style="max-width: 200px;" />
            </div>
        </div>

        <div class="text-center mt-4">
            <a href="/Admin/SubCategory/Index" class="btn btn-outline-dark">بازگشت به لیست</a>
        </div>
    </div>
</div>

<style>
    .text-purple {
        color: purple;
        font-weight: bold;
    }
</style>
