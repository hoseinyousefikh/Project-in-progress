@model App.Domain.Core.Home.Entities.Users.User
@using App.Domain.Core.Home.Enum

<div class="edit-container">
    <h2>ویرایش اطلاعات کاربر</h2>
    <form asp-action="Edit" method="post">
        <input type="hidden" asp-for="Id" />

        <div class="form-group">
            <label>نام</label>
            <input type="text" asp-for="FirstName" class="form-control" />
        </div>

        <div class="form-group">
            <label>نام خانوادگی</label>
            <input type="text" asp-for="LastName" class="form-control" />
        </div>

        <div class="form-group">
            <label>آدرس</label>
            <input type="text" asp-for="Address" class="form-control" />
        </div>

        <div class="form-group">
            <label>شماره شبا</label>
            <input type="text" asp-for="ShebaNumber" class="form-control" />
        </div>

        <div class="form-group">
            <label>شماره کارت</label>
            <input type="text" asp-for="CardNumber" class="form-control" />
        </div>

        <div class="form-group">
            <label>توضیحات</label>
            <textarea asp-for="Description" class="form-control"></textarea>
        </div>

        <div class="form-group">
            <label asp-for="CityId">شهر</label>
            <select asp-for="CityId" asp-items="@(ViewBag.Cities)" class="form-control">
                <option value="">یک شهر انتخاب کنید</option>
            </select>
            <span asp-validation-for="CityId" class="text-danger"></span>
        </div>

        @if (Model.RoleType == RoleEnum.Expert)
        {
            <div class="form-group">
                <label>امتیاز</label>
                <input type="number" asp-for="ExpertDetails.Rating" class="form-control" />
            </div>

            <div class="form-group">
                <label>بیوگرافی</label>
                <textarea asp-for="ExpertDetails.Biography" class="form-control"></textarea>
            </div>
        }

        <button type="submit" class="submit-btn">ذخیره تغییرات</button>
        <a href="@Url.Action("Index")" class="back-btn">بازگشت</a>
    </form>
</div>

<style>
    .edit-container {
        max-width: 500px;
        margin: 30px auto;
        padding: 20px;
        background-color: #6a0dad;
        color: white;
        border-radius: 10px;
        box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.2);
        text-align: center;
    }

    .form-group {
        margin-bottom: 15px;
        text-align: left;
    }

    .form-control {
        width: 100%;
        padding: 8px;
        border-radius: 5px;
        border: none;
    }

    .submit-btn, .back-btn {
        display: inline-block;
        margin-top: 10px;
        padding: 10px 20px;
        border-radius: 5px;
        text-decoration: none;
        color: white;
    }

    .submit-btn {
        background-color: #4b0082;
        border: none;
        cursor: pointer;
    }

        .submit-btn:hover {
            background-color: #370061;
        }

    .back-btn {
        background-color: gray;
    }

        .back-btn:hover {
            background-color: darkgray;
        }
</style>
