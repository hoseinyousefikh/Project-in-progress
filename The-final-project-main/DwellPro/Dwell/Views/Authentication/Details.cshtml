@using App.Domain.Core.Home.Enum
<div class="user-details-container">
    <div class="user-card">
        <div class="sign-out-btn">
            <form asp-action="SignOutCustomer" method="post" style="margin: 0;">
                @Html.AntiForgeryToken()
                <button type="submit" class="btn btn-sign-out">
                    <i class="fa fa-sign-out-alt"></i> خروج
                </button>
            </form>
        </div>

        <div class="user-profile">
            <img src="@Model.ProfilePicture" alt="Profile" class="profile-img">
        </div>
        <div class="user-info">
            <h2>@Model.FirstName @Model.LastName</h2>
            <p><strong>شهر:</strong> @Model.CityName</p>
            <p><strong>آدرس:</strong> @Model.Address</p>
            <p><strong>شماره شبا:</strong> @Model.ShebaNumber</p>
            <p><strong>شماره کارت:</strong> @Model.CardNumber</p>
            <p><strong>وضعیت:</strong> @(Model.RoleStatus == UserStatus.Active ? "فعال" : "غیرفعال")</p>
        </div>
        <div class="user-actions">

            <a href="@Url.Action("UpdateEmail", "Authentication")" class="btn btn-update">آپدیت ایمیل</a>
            <a href="@Url.Action("UpdatePassword", "Authentication")" class="btn btn-update">آپدیت پسورد</a>
            <a href="@Url.Action("EditUser", "Authentication")" class="btn btn-update">آپدیت جزئیات</a>
        </div>


    </div>
</div>

<style>
    .user-details-container {
        display: flex;
        justify-content: center;
        align-items: center;
        min-height: 90vh;
    }

    .user-card {
        background: rgba(255, 255, 255, 0.15);
        backdrop-filter: blur(15px);
        border-radius: 16px;
        padding: 25px;
        width: 400px;
        text-align: center;
        box-shadow: 0px 6px 15px rgba(0, 0, 0, 0.3);
        border: 2px solid rgba(255, 255, 255, 0.3);
        transition: all 0.3s ease;
    }

        .user-card:hover {
            border-color: rgba(255, 0, 0, 0.3);
            transform: scale(1.02);
        }

    .profile-img {
        width: 120px;
        height: 120px;
        border-radius: 50%;
        border: 4px solid #fff;
        margin-bottom: 15px;
        object-fit: cover;
    }

    .user-info h2 {
        font-size: 24px;
        color: #000;
        font-weight: bold;
    }

    .user-info p {
        font-size: 16px;
        color: #333;
        margin: 10px 0;
        text-shadow: 1px 1px 2px rgba(0, 0, 0, 0.3);
    }

    .user-actions {
        margin-top: 20px;
    }

    .btn-update {
        display: block;
        width: 100%;
        background: rgba(255, 0, 0, 0.3);
        color: #fff;
        padding: 12px;
        margin: 10px 0;
        text-decoration: none;
        border-radius: 10px;
        font-weight: bold;
        transition: all 0.3s ease;
        border: 1px solid rgba(255, 0, 0, 0.5);
    }

        .btn-update:hover {
            background: rgba(255, 0, 0, 0.5);
            transform: scale(1.08);
        }

    .sign-out-btn {
        position: absolute;
        top: 10px;
        right: 10px;
    }

    .btn-sign-out {
        background-color: red;
        color: white;
        border: none;
        padding: 10px 15px;
        font-size: 16px;
        border-radius: 5px;
        transition: background-color 0.3s ease, transform 0.3s ease;
    }

        .btn-sign-out:hover {
            background-color: darkred;
            transform: scale(1.05);
        }

    .fa-sign-out-alt {
        margin-right: 5px;
    }
</style>
