

@model App.Domain.Core.Home.DTO.RegisterDto

@{
    ViewData["Title"] = "ثبت نام";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-lg border-0 rounded" style="border-radius: 15px; border: 1px solid #e57373;">
                <div class="card-header text-white text-center" style="background-color: #d32f2f;">
                    <h3>ثبت نام</h3>
                </div>
                <div class="card-body" style="background-color: #f5f5f5; border-radius: 15px;">
                    <form asp-action="Register" method="post">
                        <div class="mb-3">
                            <label asp-for="FirstName" class="form-label">نام</label>
                            <input asp-for="FirstName" class="form-control input-field" />
                            <span asp-validation-for="FirstName" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="LastName" class="form-label">نام خانوادگی</label>
                            <input asp-for="LastName" class="form-control input-field" />
                            <span asp-validation-for="LastName" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Email" class="form-label">ایمیل</label>
                            <input asp-for="Email" class="form-control input-field" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Password" class="form-label">گذرواژه</label>
                            <input asp-for="Password" type="password" class="form-control input-field" />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="ConfirmPassword" class="form-label">تایید گذرواژه</label>
                            <input asp-for="ConfirmPassword" type="password" class="form-control input-field" />
                            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="CityId" class="form-label">شهر</label>
                            <select asp-for="CityId" asp-items="@(ViewBag.Cities)" class="form-control input-field">
                                <option value="">یک شهر انتخاب کنید</option>
                            </select>
                            <span asp-validation-for="CityId" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="RoleType" class="form-label">نقش</label>
                            <select asp-for="RoleType" class="form-control input-field">
                                <option value="Customer">مشتری</option>
                                <option value="Expert">متخصص</option>
                            </select>
                            <span asp-validation-for="RoleType" class="text-danger"></span>
                        </div>

                        <button type="submit" class="btn w-100 text-white" style="background-color: #d32f2f;">
                            ثبت نام
                        </button>
                    </form>
                </div>
                <div class="card-footer text-center">
                    <p>حساب کاربری دارید؟ <a asp-action="Login" class="text-danger">اینجا وارد شوید</a></p>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

<style>
    .input-field {
        border-radius: 8px;
        padding: 10px;
        transition: all 0.3s ease;
    }

        .input-field:hover {
            border-color: #c62828;
            font-weight: bold;
        }

        .input-field:focus {
            border-color: #c62828;
            box-shadow: 0 0 5px rgba(204, 51, 51, 0.8);
            font-weight: bold;
        }

    .card {
        border-radius: 15px;
        border: 1px solid #e57373;
        padding: 20px; 
    }

    .card-header {
        background-color: #d32f2f;
        border-radius: 15px 15px 0 0;
        padding: 15px;
    }

    .card-footer {
        background-color: #f5f5f5;
        border-radius: 0 0 15px 15px;
        padding: 15px; 
    }

    button {
        background-color: #d32f2f;
        border-radius: 5px;
    }

        button:hover {
            background-color: #c62828;
        }
</style>
