@model App.Domain.Core.Home.DTO.UpdateEmailDto

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card custom-card">
                <div class="card-header text-center">
                    <h4 class="text-danger">تغییر ایمیل</h4>
                </div>
                <div class="card-body">
                    <form asp-action="UpdateEmail" method="post">
                        <div class="form-group">
                            <label for="new-email" class="text-dark">ایمیل جدید*</label>
                            <input type="email" id="new-email" name="NewEmail" class="form-control form-control-md" placeholder="ایمیل جدید را وارد کنید">
                            <span asp-validation-for="NewEmail" class="text-danger"></span>
                        </div>

                        <button type="submit" class="btn btn-danger btn-lg btn-block">به روزرسانی ایمیل</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
<style>
    .custom-card {
        background-color: #f8f9fa;
        border-radius: 15px;
        padding: 20px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    }

    .card-header {
        background-color: #f8f9fa;
        border-bottom: none;
    }

    .form-control-md {
        border-radius: 10px;
    }

    .btn-danger {
        background-color: rgba(220, 53, 69, 0.5);
        border: none;
        border-radius: 25px;
        color: white;
        transition: background-color 0.3s ease;
    }

        .btn-danger:hover {
            background-color: rgba(220, 53, 69, 0.7);
        }

    .container {
        margin-top: 50px;
    }

    .form-group {
        margin-bottom: 20px;
    }

    .text-danger {
        color: #dc3545;
    }
</style>
