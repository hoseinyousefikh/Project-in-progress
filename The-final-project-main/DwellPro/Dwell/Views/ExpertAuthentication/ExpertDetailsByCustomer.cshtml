@model App.Domain.Core.Home.DTO.ExpertDetailsDto

<div class="user-details-container">
    <div class="user-card">
        <div class="user-profile">
            <img src="@Model.ProfilePicture" alt="Profile" class="profile-img">
        </div>
        <div class="user-info">
            <h2>@Model.FirstName @Model.LastName</h2>
            <p><strong>شماره شبا:</strong> @Model.ShebaNumber</p>
            <p><strong>شماره کارت:</strong> @Model.CardNumber</p>
            <p class="rating-text"><strong>امتیاز:</strong> @(ViewBag.Rating?.ToString("0.0") ?? "نامشخص")</p>
        </div>
    </div>
</div>

<style>
    .user-details-container {
        display: flex;
        justify-content: center;
        align-items: center;
        min-height: 90vh;
    }

    .user-card {
        background: rgba(255, 255, 255, 0.15);
        backdrop-filter: blur(15px);
        border-radius: 16px;
        padding: 25px;
        width: 350px;
        text-align: center;
        box-shadow: 0px 6px 15px rgba(0, 0, 0, 0.3);
        border: 2px solid rgba(255, 255, 255, 0.3);
        transition: all 0.3s ease;
    }

    .profile-img {
        width: 100px;
        height: 100px;
        border-radius: 50%;
        border: 4px solid #fff;
        margin-bottom: 15px;
        object-fit: cover;
    }

    .user-info h2 {
        font-size: 22px;
        color: #000;
        font-weight: bold;
    }

    .user-info p {
        font-size: 16px;
        color: #333;
        margin: 8px 0;
    }

    .rating-text {
        font-size: 18px;
        font-weight: bold;
        color: #ff9800;
    }
</style>
