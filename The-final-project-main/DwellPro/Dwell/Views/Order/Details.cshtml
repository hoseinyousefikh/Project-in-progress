@using DwellMVC.Areas.Admin.CustomAuthorize
@model App.Domain.Core.Home.Entities.ListOrder.Orders

@{
    ViewData["Title"] = "جزئیات سفارش";
}

<div class="order-details-container">
    <h2>جزئیات سفارش #@Model.Id</h2>

    <table class="order-details-table">
        <tr>
            <th>تاریخ درخواست:</th>
            <td>@Model.RequestDate.ToString("yyyy/MM/dd")</td>
        </tr>
        <tr>
            <th>تاریخ اجرا:</th>
            <td>@Model.ExecutionDate.ToString("yyyy/MM/dd")</td>
        </tr>
        <tr>
            <th>زمان اجرا:</th>
            <td>@Model.ExecutionTime.ToString(@"hh\:mm")</td>
        </tr>
        <tr>
            <th>قیمت پایه:</th>
            <td>@Model.BasePrice تومان</td>
        </tr>
        <tr>
            <th>وضعیت سفارش:</th>
            <td>@Model.OrderStatus.GetDisplayName()</td>
        </tr>
        <tr>
            <th>وضعیت پرداخت:</th>
            <td>@Model.PaymentStatus.GetDisplayName()</td>
        </tr>

        <tr>
            <th>سرویس خانگی:</th>
            <td>@Model.HomeServiceName.Name</td>
        </tr>
    </table>

    <h3>تصاویر سفارش</h3>

    @if (Model.Pictures != null && Model.Pictures.Any())
    {
        <div class="image-scroll-container">
            @foreach (var pic in Model.Pictures)
            {
                <div class="image-item">
                    <img src="@pic.ImageUrl" alt="تصویر سفارش">
                </div>
            }
        </div>
    }
    else
    {
        <p>هیچ تصویری برای این سفارش ثبت نشده است.</p>
    }

    <div class="button-container">
        <a href="@Url.Action("GetOrdersForUser", "Order")" class="btn btn-secondary">بازگشت</a>
        <a href="@Url.Action("DeleteConfirm", "Order", new { id = Model.Id })" class="btn btn-danger">حذف سفارش</a>
    </div>
</div>

<style>
    .order-details-container {
        max-width: 600px;
        margin: 0 auto;
        padding: 20px;
        background-color: #ffebee;
        border: 2px solid #f8d7da;
        border-radius: 12px;
        text-align: center;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    .order-details-table {
        width: 100%;
        margin: 20px 0;
        border-collapse: collapse;
    }

        .order-details-table th, .order-details-table td {
            padding: 10px;
            border-bottom: 1px solid #f8d7da;
            text-align: left;
        }

        .order-details-table th {
            background-color: #ffcdd2;
            color: #b71c1c;
            font-weight: bold;
        }

    .image-scroll-container {
        display: flex;
        overflow-x: auto;
        gap: 10px;
        padding: 10px;
        max-width: 100%;
        scroll-snap-type: x mandatory;
        border: 1px solid #f8d7da;
        border-radius: 8px;
        background-color: #fff5f5;
        margin-top: 15px;
    }

    .image-item {
        flex: 0 0 auto;
        width: 150px;
        height: 150px;
        border-radius: 8px;
        overflow: hidden;
        scroll-snap-align: start;
    }

        .image-item img {
            width: 100%;
            height: 100%;
            object-fit: cover;
            border-radius: 8px;
        }

    .button-container {
        margin-top: 20px;
        display: flex;
        justify-content: center;
        gap: 10px;
    }

    .btn {
        padding: 10px 20px;
        border-radius: 8px;
        text-decoration: none;
        font-size: 16px;
        transition: background-color 0.3s ease;
    }

    .btn-secondary {
        background-color: #b0bec5;
        color: white;
    }

    .btn-danger {
        background-color: #f44336;
        color: white;
    }

        .btn-danger:hover {
            background-color: #d32f2f;
        }
</style>
