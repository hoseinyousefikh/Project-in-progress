@using App.Domain.Core.Home.DTO
@model ProposalDto

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">
        @TempData["ErrorMessage"]
    </div>
}

<div class="proposal-container">
    <h2>پیشنهادات برای سفارش @Model.OrderId</h2>

    @if (Model.Proposals == null || !Model.Proposals.Any())
    {
        <p class="no-proposals">پیشنهادی موجود نیست</p>
    }
    else
    {
        <table class="proposal-table">
            <thead>
                <tr>
                    <th>شناسه</th>
                    <th>نام کارشناس</th>
                    <th>تاریخ پیشنهاد</th>
                    <th>قیمت پیشنهادی</th>
                    <th>تاریخ اتمام کار</th>
                    <th>وضعیت</th>
                    <th>امتیاز</th>
                    <th>توضیحات</th>
                    <th>عملیات</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Proposals)
                {
                    <tr>
                        <td>@item.Proposal.Id</td>
                        <td>
                            @if (item.Expert?.User != null)
                            {
                                <span>
                                    @item.Expert.User.FirstName @item.Expert.User.LastName
                                </span>

                                <div class="dropdown">
                                    <button class="dropbtn">⋮</button>
                                    <div class="dropdown-content">
                                        <a href="@Url.Action("ExpertDetailsByCustomer", "ExpertAuthentication", new { expertId = item.Expert.User.Id })">نمایش پروفایل</a>
                                    </div>
                                </div>
                            }
                            else
                            {
                                <span>اکسپرت یافت نشد</span>
                            }
                        </td>
                        <td>@item.Proposal.ProposalDate?.ToString("yyyy-MM-dd")</td>
                        <td>@item.Proposal.ProposedPrice</td>
                        <td>@item.Proposal.WorkCompletionDate.ToString("yyyy-MM-dd")</td>
                        <td>
                            @if (!Model.Proposals.Any(p => p.Proposal.IsSelectedByCustomer))
                            {
                                <form method="post" asp-action="AcceptProposal" asp-controller="Order">
                                    <input type="hidden" name="proposalId" value="@item.Proposal.Id" />
                                    <button type="submit" class="btn btn-success">تایید</button>
                                </form>
                            }
                            else
                            {
                                @if (item.Proposal.IsSelectedByCustomer)
                                {
                                    <span class="badge badge-success">تایید شده</span>
                                }
                                else
                                {
                                    <button class="btn btn-danger" disabled>رد شده</button>
                                }
                            }
                        </td>
                        <td>
                            <span class="badge badge-info">@item.Expert.Rating از 5</span>
                        </td>
                        <td>
                            <div class="description-container">
                                <div class="description-content">
                                    @item.Proposal.ProposalDescription
                                </div>
                                @if (!string.IsNullOrEmpty(item.Proposal.ProposalDescription) && item.Proposal.ProposalDescription.Length > 100)
                                {
                                    <button class="btn btn-info toggle-description">مشاهده بیشتر</button>
                                }
                            </div>
                        </td>
                        <td>
                            @if (item.Proposal.IsSelectedByCustomer)
                            {
                                <a href="@Url.Action("GetComment", "Comment", new { proposalId = item.Proposal.Id })" class="btn btn-dark">ثبت نظر و امتیاز</a>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>

<style>
    .proposal-container {
        background-color: #ffe6e6;
        padding: 20px;
        border-radius: 15px;
        border: 2px solid #ff9999;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
        max-width: 90%;
        margin: 20px auto;
        text-align: center;
    }

    .no-proposals {
        font-size: 18px;
        color: #ff6666;
        font-weight: bold;
    }

    .dropbtn {
        background: none;
        border: none;
        font-size: 20px;
        cursor: pointer;
        padding: 5px;
        margin-left: 5px;
        position: relative;
    }

    .dropdown {
        position: relative;
        display: inline-block;
    }

    .dropdown-content {
        display: none;
        position: absolute;
        background-color: #fff;
        min-width: 120px;
        box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.2);
        border-radius: 6px;
        z-index: 10;
        right: 0;
        top: -45px;
        transform: translateY(-5px);
        transition: opacity 0.2s ease-in-out, transform 0.2s ease-in-out;
        opacity: 0;
        visibility: hidden;
    }

        .dropdown-content a {
            color: #333;
            padding: 10px;
            text-decoration: none;
            display: block;
            font-size: 14px;
            text-align: right;
        }

            .dropdown-content a:hover {
                background-color: #f1f1f1;
            }

    .dropdown.active .dropdown-content {
        display: block;
        opacity: 1;
        visibility: visible;
        transform: translateY(0);
    }

    .proposal-table {
        width: 100%;
        border-collapse: collapse;
        background: #fff;
        border-radius: 8px;
        overflow: hidden;
        text-align: center;
    }

        .proposal-table th {
            background: #ff6666;
            color: white;
            padding: 12px;
        }

        .proposal-table td {
            padding: 10px;
            border-bottom: 1px solid #ddd;
        }

        .proposal-table tbody tr:hover {
            background-color: #ffcccc;
            transition: 0.3s;
        }

    .description-container {
        position: relative;
        max-width: 200px;
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
    }

    .description-content {
        display: inline-block;
        max-width: 100%;
        overflow-x: auto;
        white-space: nowrap;
        border: 1px solid #ddd;
        padding: 5px;
        border-radius: 6px;
        background-color: #f9f9f9;
    }

    .toggle-description {
        margin-top: 5px;
        padding: 4px 8px;
        font-size: 12px;
        background-color: #17a2b8;
        color: white;
        border: none;
        border-radius: 4px;
        cursor: pointer;
    }

        .toggle-description:hover {
            background-color: #138496;
        }

    .btn-dark {
        background-color: #343a40;
        color: white;
        padding: 8px 14px;
        border-radius: 6px;
        text-decoration: none;
        display: inline-block;
        transition: background 0.3s ease-in-out;
    }

        .btn-dark:hover {
            background-color: #23272b;
        }
</style>

<script>
    document.addEventListener("DOMContentLoaded", function () {
        document.querySelectorAll(".toggle-description").forEach(button => {
            button.addEventListener("click", function () {
                const description = this.previousElementSibling;
                if (description.style.whiteSpace === "nowrap") {
                    description.style.whiteSpace = "normal";
                    this.innerText = "نمایش کمتر";
                } else {
                    description.style.whiteSpace = "nowrap";
                    this.innerText = "مشاهده بیشتر";
                }
            });
        });

        document.querySelectorAll(".dropbtn").forEach(button => {
            button.addEventListener("click", function (event) {
                event.stopPropagation();
                let dropdown = this.closest(".dropdown");
                dropdown.classList.toggle("active");

                document.querySelectorAll(".dropdown").forEach(d => {
                    if (d !== dropdown) {
                        d.classList.remove("active");
                    }
                });
            });
        });

        document.addEventListener("click", function () {
            document.querySelectorAll(".dropdown").forEach(dropdown => {
                dropdown.classList.remove("active");
            });
        });
    });
</script>
