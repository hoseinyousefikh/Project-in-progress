@{
    ViewBag.Title = "وضعیت پیشنهادات";
}

<style>
    .status-container {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        height: 100vh;
        background-color: #fff5f5;
    }

    .status-box {
        width: 300px;
        background-color: #ffe6e6;
        border: 2px solid #ff9999;
        border-radius: 15px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        padding: 20px;
        text-align: center;
    }

    .status-link {
        display: block;
        background-color: #ff6666;
        color: #fff;
        text-decoration: none;
        padding: 10px;
        margin: 5px 0;
        border-radius: 5px;
        transition: background-color 0.3s ease;
    }

        .status-link:hover {
            background-color: #e65c5c;
        }
</style>

<div class="status-container">
    <div class="status-box">
        <h2>وضعیت پیشنهادات</h2>

        @Html.ActionLink("در حال بررسی", "ExpertProposalsPending", "OrderExpert", null, new { @class = "status-link" })
        @Html.ActionLink("پذیرفته شده", "ExpertProposalsAccepted", "OrderExpert", null, new { @class = "status-link" })
        @Html.ActionLink("رد شده", "ExpertProposalsRejected", "OrderExpert", null, new { @class = "status-link" })
    </div>
</div>
