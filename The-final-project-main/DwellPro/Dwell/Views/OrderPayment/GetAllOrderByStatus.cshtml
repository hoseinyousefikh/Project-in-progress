@using App.Domain.Core.Home.Enum
@using DwellMVC.Areas.Admin.CustomAuthorize
@using DwellMVC.Models
@model IEnumerable<OrderViewModel>

@{
    ViewData["Title"] = "سفارشات در انتظار ورود متخصص";
}

<h2 class="page-title">@ViewData["Title"]</h2>

<div class="order-container">
    @if (Model != null && Model.Any())
    {
        <div class="order-list">
            @foreach (var order in Model)
            {
                <div class="order-item">
                    <div class="order-image">
                        <img src="@order.ImageUrl" alt="@order.ServiceTitle" />
                    </div>
                    <div class="order-details">
                        <h3>@order.ServiceTitle</h3>
                        <p>قیمت: @order.Price تومان</p>
                        <p>تاریخ درخواست: @order.OrderDate.ToString("yyyy/MM/dd")</p>
                        @{
                            var statusEnum = (OrderStatus)Enum.Parse(typeof(OrderStatus), order.Status);
                        }

                        <p>وضعیت: <strong>@statusEnum.GetDisplayName()</strong></p>
                        <form action="@Url.Action("CompleteOrder", "OrderPayment")" method="post">
                            <input type="hidden" name="orderId" value="@order.Id" />
                            <button type="submit" class="btn btn-success">تکمیل سفارش</button>
                        </form>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <p>هیچ سفارشی با این وضعیت وجود ندارد.</p>
    }
</div>

<style>
    .page-title {
        text-align: center;
        margin-bottom: 30px;
    }

    .order-container {
        max-width: 1200px;
        margin: 0 auto;
        padding: 20px;
    }

    .order-list {
        display: flex;
        flex-wrap: wrap;
        gap: 15px;
    }

    .order-item {
        background-color: #f8d7da;
        border: 1px solid #f5c6cb;
        border-radius: 8px;
        display: flex;
        align-items: center;
        justify-content: flex-start; /* تنظیم نمایش درست محتوا */
        padding: 15px;
        position: relative;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        width: calc(50% - 15px);
        box-sizing: border-box;
    }

        .order-item:hover {
            transform: scale(1.05);
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
        }

    .order-image img {
        width: 120px;
        height: 120px;
        object-fit: cover;
        border-radius: 8px;
        margin-right: 20px; /* فاصله بیشتر از عکس */
    }

    .order-details {
        display: flex;
        flex-direction: column;
        justify-content: space-between;
        flex-grow: 1;
        margin-right: 20px; /* فاصله بیشتر از عکس */
    }

        .order-details h3 {
            font-size: 18px;
            margin: 0;
            font-weight: bold;
        }

        .order-details p {
            font-size: 14px;
            margin: 5px 0;
        }

    .btn {
        background-color: #28a745;
        color: white;
        border: none;
        padding: 8px 15px;
        border-radius: 5px;
        cursor: pointer;
        text-align: center;
        position: absolute;
        bottom: 15px; /* دکمه را در پایین کارت قرار می‌دهد */
        left: 15px; /* دکمه را در سمت چپ قرار می‌دهد */
    }

        .btn:hover {
            background-color: #218838;
        }

    button[type="submit"] {
        padding: 10px 15px;
        font-size: 16px;
        background-color: #dc3545;
        color: #fff;
        border: none;
        border-radius: 5px;
        cursor: pointer;
        transition: background-color 0.3s;
    }

        button[type="submit"]:hover {
            background-color: #c82333;
        }
</style>
